# Ansible-managed HTTP Virtual Host
<VirtualHost *:80>
  ServerAdmin webmaster@{{ ansible_fqdn }}
  ServerName {{ ansible_fqdn }}
  ErrorLog {{ apache_log_dir }}/{{ ansible_hostname }}-error.log
  CustomLog {{ apache_log_dir }}/{{ ansible_hostname }}-common.log common
  DocumentRoot {{ vhosts_root_directory }}/{{ ansible_hostname }}
  <Directory {{ vhosts_root_directory }}/{{ ansible_hostname }}>
    Options +Indexes +FollowSymlinks +Includes
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>
